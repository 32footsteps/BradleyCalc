<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16px"
    android:id="@+id/weeklyFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:padding="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Weekly Requirements"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow or Orange-Colored Fruit or Veg."
            android:id="@+id/checkBoxYellowOrange"
            android:layout_row="1"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liver"
            android:id="@+id/checkBoxLiver"
            android:layout_row="2"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whole Baked Potato"
            android:id="@+id/checkBoxPotato"
            android:layout_row="3"
            android:layout_column="0" />
    </GridLayout>
</LinearLayout>