<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16px"
    android:id="@+id/dailyFragment">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Requirements"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="16px" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8"
        android:padding="16px">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            android:id="@+id/checkBoxEggs"
            android:layout_gravity="center_vertical"
            android:layout_column="1"
            android:layout_row="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk Products"
            android:id="@+id/checkBoxMilk"
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_row="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:id="@+id/checkBoxProtein"
            android:layout_row="3"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Veg."
            android:id="@+id/checkBoxGreenVeg"
            android:layout_row="3"
            android:layout_column="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetables"
            android:id="@+id/checkBoxVeg"
            android:layout_row="4"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grains"
            android:id="@+id/checkBoxGrains"
            android:layout_row="4"
            android:layout_column="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vit. C Source"
            android:id="@+id/checkBoxVitC"
            android:layout_row="5"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats"
            android:id="@+id/checkBoxFats"
            android:layout_row="5"
            android:layout_column="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:id="@+id/checkBoxFruits"
            android:layout_row="6"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:id="@+id/checkBoxWater"
            android:layout_row="6"
            android:layout_column="1" />
    </GridLayout>

</LinearLayout>